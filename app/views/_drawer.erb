<div class="mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">
  <header class="drawer-header">
    <a href="/"><img src="<%= @current_user.picture %>" class="avatar"></a>
    <span><%= @current_user.name %></span>
    <div class="mdl-layout-spacer"></div>
  </header>
  <nav class="mdl-navigation mdl-color--blue-grey-800">
    <% session[:group_users].each do |user| %>
      <div class="mdl-navigation__link">
        <img src="<%= user.picture %>" width="40" height="40" role="presentation" class="avatar">
      <span class="mdl-badge" data-badge="<%= user.badge_count %>"><%= user.name %></span>
      </div>
    <% end %>

    <div class="mdl-navigation__link">
      <img src="/mdl/user.jpg" width="40" height="40" role="presentation" class="avatar">
    <span class="mdl-badge" data-badge="4">Molly</span>
    </div>

    <div class="mdl-layout-spacer"></div>
    <a class="mdl-navigation__link" href=""><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">clear</i><span class="visuallyhidden">Log Out</span></a>
  </nav>
</div>
