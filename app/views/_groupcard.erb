<% groups.each do |group| %>
<div class="result-card-square mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text"><%= group.name %></h2>
  </div>
  <div class="mdl-card__supporting-text">
    <strong>Members:</strong>
    <% if group.users.length > 0 %>
      <% group.users.each do |user|%>
        <%= user.name %>
      <% end %>
    <% else %>
      No members
    <% end %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
      <% if group.users.include? @current_user %>
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/groups/<%= group.id %>">
          View
        </a>
      <% else %>
      <form method="post" action="/groups/join/<%= group.id %>">
        <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
          Join
        </button>
      </form>
      <% end %>
    </a>
  </div>
</div>
<% end %>
