<%= erb :'_drawer' %>
  <main class="mdl-layout__content mdl-color--grey-100"><div class="mdl-grid content">
    <div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
      <div class="mdl-card__supporting-text">
        <div class="mdl-grid">
          <div class="mdl-cell--middle mdl-cell--6-col">
            <h1><%= @activity.name %></h1>
              <p>
                Date: <%= @activity.date %>
              </p>
              <p>
                Time: <%= @activity.time %>
              </p>
              <p>
                Location: <%= @activity.location %>
              </p>
              <p>
                Attendees:
                <% if @activity.users.all.length > 0 %>
                  <% @activity.users.all.each do |user|%>
                    <%= user.name %>
                  <% end %>
                <% else %>
                  No RSVPs
                <% end %>
              </p>
              <div class="mdl-card__actions mdl-card--border">
                <form action="/groups/<%=@group_id%>/activities/<%=@activity.id%>" method="post">
                  <input type="hidden" name="_method" value="DELETE" />
                    <a href="/groups/<%=@group_id%>/activities/<%=@activity.id%>/edit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Edit</a>
                    <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Delete</button>
                </form>
              </div>
          </div>
          <div class="mdl-cell--middle mdl-cell--6-col">
            <iframe
              width="600"
              height="350"
              frameborder="0" style="border:0"
              src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBZRmm_73dV6GduBRl7KidmD-SxFPHmNgs&q=<%=@activity.location%>" allowfullscreen>
            </iframe>
          </div>
          <div class="mdl-card__menu">
            <a class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" href="/groups/<%= @group_id %>">
              <i class="material-icons">close</i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
