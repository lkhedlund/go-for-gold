<%= erb :'_drawer' %>
  <main class="mdl-layout__content">

    <% if @groups.length > 0 %>
      <% @groups.each do |group| %>
        <h2><a href="/groups/<%= group.id %>"><%= group.name %></a></h2>
      <% end %>
    <% else %>
      <h2>No groups found!</h2>
      <a href="/">Back to home</a>
    <% end %>

</main>
